@page
@model ProductOrderManagement.Pages.ProductsModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

@if (Model.Products == null)
{
    <p><em>Loading...</em></p>
}
else if (!Model.Products.Any())
{
    <p>No products found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}